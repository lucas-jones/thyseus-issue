{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "jsx": "react",
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "paths": {
            "@thyseus-issue/core": [
                "packages/core/src"
            ],
            "@thyseus-issue/hello": [
                "packages/hello/src"
            ]
        },
    },
    "include": [
        "packages",
        "example",
    ],
    "exclude": [
        "**/node_modules/*",
        "**/.*/"
    ],
}